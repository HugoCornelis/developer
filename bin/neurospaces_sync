#!/usr/bin/perl
#!/usr/bin/perl -w -d:ptkdb
#


use strict;


use Getopt::Long;

use YAML;


my $option_developer = 0;
my $option_enable = 0;
my $option_regex_selector = ".*";
my $option_repo_sync = 'virtual2.cbi.utsa.edu';
my $option_verbose = 0;

my $verbose_options = "--verbose " x $option_verbose;
my $developer_options = "--developer " x $option_developer;
my $regex_options = "--regex $option_regex_selector ";
my $enable_options = "--enable $option_enable ";

system "neurospaces_build --repo-sync $option_repo_sync --no-configure --no-install --no-compile " .  . ("--developer " x $option_developer) . "$option_regex_selector $option_enable";


