#!/usr/bin/perl -w
#!/usr/bin/perl -d:ptkdb -w
#


use strict;


use Getopt::Long;

use YAML;


my $option_clean;
my $option_configure;
my $option_developer = 1;
my $option_distclean;
my $option_enable;
my $option_regex_selector;
my $option_tag = 0;
my $option_verbose;

{
    my $result
	= GetOptions
	    (
	     "clean!" => \$option_clean,
	     "configure!" => \$option_configure,
	     "developer!" => \$option_developer,
	     "distclean!" => \$option_distclean,
	     "enable=s" => \$option_enable,
	     "regex-selector=s" => \$option_regex_selector,
	     "tag=s" => \$option_tag,
	     "v|verbose+" => \$option_verbose,
	    );

    if (!$result)
    {
	die "$0: *** Error: Error in option processing";
    }
}

{
    if (!$option_tag)
    {
	die "$0: *** Error: No release label found on the command line (must have the format [major-minor-micro], -micro is optional)";
    }

    my $release_label = $option_tag;

    if ($release_label !~ m/([^-]+)-([^-]+)?(?:-([^-]+))?/)
    {
	die "$0: *** Error: Release label does not have the correct format (must have the format [major-minor-micro], -micro is optional)";
    }

    my $release_major = $1;

    my $release_minor = $2;

    my $release_micro = $3;

}

my $clean_options = defined $option_clean ? "--clean " x $option_clean : '';
my $distclean_options = defined $option_distclean ? "--distclean " x $option_distclean : '';
my $configure_options = defined $option_configure ? "--configure " x $option_configure : '--no-configure';
my $tag_options = defined $option_tag ? "--tag $option_tag" : '';
my $verbose_options = defined $option_verbose ? "--verbose " x $option_verbose : '';
my $developer_options = defined $option_developer ? "--developer " x $option_developer : '';
my $regex_options = defined $option_regex_selector ? "--regex '$option_regex_selector' " : '';
my $enable_options = defined $option_enable ? "--enable $option_enable " : '';

system "neurospaces_build $tag_options $clean_options $distclean_options $configure_options --no-installed-versions $verbose_options $developer_options $regex_options $enable_options";


