#!/bin/sh

MTNDIR=/root/MTN

# email subject
SUBJECT="Monotone repository sync"
# Email To ?
EMAIL="cbiadmin@utsa.edu"
# Email text/message
EMAILMESSAGE="/tmp/emailmessage.txt"

echo Performing monotone repository syncing 

echo Copying files from cajal. 

rm -f $MTNDIR/*
scp -r root@cajal.cbi.utsa.edu:/tray2/groups/nsdevelopers/MTN /root 
scp root@cajal.cbi.utsa.edu:/tray2/groups/nsdevelopers/mando/ns-gen.mtn $MTNDIR 

echo Syncing ns-genesis.sli 

'mtn --db=$MTNDIR/ns-gen.mtn sync virtual2.cbi.utsa.edu:4692 "*"' 


echo Syncing model-container 

mtn --db=$MTNDIR/model-container.mtn sync virtual2.cbi.utsa.edu:4693 "*" 


echo Syncing Heccer 

mtn --db=$MTNDIR/heccer.mtn sync virtual2.cbi.utsa.edu:4694 "*" 



echo Syncing ssp 

mtn --db=$MTNDIR/ssp.mtn sync virtual2.cbi.utsa.edu:4695 "*" 


echo Syncing Installer 

mtn --db=$MTNDIR/neurospaces-developer.mtn sync virtual2.cbi.utsa.edu:4696 "*" 

echo Syncing Project Browser

mtn --db=$MTNDIR/neurospacesweb.mtn sync virtual2.cbi.utsa.edu:4697 "*"

echo Performed repository sync: `date +%Y-%m-%d` `date +%H:%M:%S` >> /var/log/mtnrepo.log 

#rm -f $MTNDIR/*
echo Done! 

#/bin/mail -s "$SUBJECT" "$EMAIL" < $EMAILMESSAGE

#rm $EMAILMESSAGE